<table class="table">
  <tr class="table__row">
    <th class="table__header">Album</th> 
    <th class="table__header">Artist</th>
    <th class="table__header">Genre</th>
    <th class="table__header">Album Rating</th> 
  </tr>
  <% @albumarray.each do |album,artist,genre,albumrating| %>
  <tr class="table__row">
  	<td class=" table__data"><a class="albumTable__link" href="/albumdetail?album=<%= album %>&artist=<%= artist %>"><%= album %></a></td>
  	<td class="table__data"><%= artist %></td>
  	<td class="table__data"><%= genre %></td>
  	<td class="table__data rating"><%= albumrating %></td>
  </tr>
   <% end %>
</table>



<!DOCTYPE html>
<html>
  <head>
    <link type="text/css" rel="stylesheet" href="stylesheet.css" />
    <title>All Music</title>
  </head>
  <body>
    <div class="pg-heading"><h1>Curated Music Collection</h1></div>
    <div class="tbl-container">
      <div>
        <table class="table">
          <thead class="table__header">
            <tr class="table__row">
              <th class="table__header" colspan="4">Album List</th>
            </tr>
            <tr class="table__row">
              <th class="table__header">Album</th>
              <th class="table__header">Artist</th>
              <th class="table__header">Genre</th>
              <th class="table__header">Album Rating</th>
            </tr>
          </thead>
          <tbody class="table__row">
            <!-- Outer loop iterates 3 times. -->
            <% @tbldata.each do |x| %>
            <!-- Inner loop iterates 9 times -->
              <tr>
                <% x.each do |key, value| %>
                  <td><%= value %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>